<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/cocktails_menu_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/cocktail_menu_item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--TODO: replace the 4 images for a grid layout-->

    <android.support.v7.widget.Toolbar
        android:background="@drawable/tool_bar_bg"
        android:id="@+id/cocktails_menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_heigth"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:paddingEnd="10dp"
            android:alpha="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="8"
                android:alpha="1"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/section_title_cocktails"
                android:textAlignment="center"
                android:textColor="@color/background_color"
                android:textSize="24sp" />

            <ImageButton
                android:visibility="invisible"
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"
                android:src="@drawable/lupa"
                android:tint="@color/background_color" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.constraint.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/cocktails_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:elevation="10dp"
        android:background="@drawable/cocktail_menu_item_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cocktails_menu_toolbar">

        <ImageButton
            android:id="@+id/cocktail_menu_gin_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="64dp"
            android:layout_marginStart="8dp"
            android:padding="15dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/gin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cocktail_menu_whisky_section"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cocktail_menu_whisky_section" />

        <ImageButton
            android:id="@+id/cocktail_menu_whisky_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:padding="15dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/whisky"
            app:layout_constraintBottom_toTopOf="@+id/cocktail_menu_gin_section"
            app:layout_constraintEnd_toStartOf="@id/cocktail_menu_rum_section"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/cocktail_menu_rum_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            android:padding="15dp"

            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/rum"
            app:layout_constraintBottom_toTopOf="@id/cocktail_menu_other_section"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cocktail_menu_whisky_section"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/cocktail_menu_other_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="64dp"
            android:layout_marginEnd="8dp"
            android:padding="15dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/others"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cocktail_menu_gin_section"
            app:layout_constraintTop_toBottomOf="@+id/cocktail_menu_rum_section" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>