<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/cocktails_menu_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="58dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cocktail_menu_gin_section"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/gin"/>

            <ImageButton
                android:id="@+id/cocktail_menu_whisky_section"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/whisky"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cocktail_menu_other_section"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/rum" />

            <ImageButton
                android:id="@+id/cocktail_menu_rum_section"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/others" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>